{
  "name": "@packi_/feature-npm",
  "version": "0.1.2",
  "description": "npm相关命令.",
  "scripts": {
    "lint": "eslint --fix ./src && prettier --write ./src",
    "test": "cross-env TS_NODE_PROJECT='./tsconfig.test.json' nyc mocha",
    "coverage": "nyc report --reporter=lcov",
    "cjs": "tsc -p tsconfig.cjs.json",
    "build": "npm run clear && npm run cjs",
    "clear": "rm -rf .nyc_output cjs coverage esm",
    "prepublishOnly": "npm run test && npm run build",
    "ci": "npm run lint && npm run build && npm run test && npm run coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yusangeng/tmpl.git"
  },
  "keywords": [],
  "author": {
    "name": "yusangeng",
    "email": "yusangeng@outlook.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@packi_/lint-config": "^0.2.0",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.10",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "chai": "^4.3.4",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.1.4",
    "nyc": "^15.1.0",
    "prettier": "^2.5.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@packi_/printer": "^0.2.0",
    "@packi_/rc": "^0.2.0",
    "@packi_/utils": "^0.1.2",
    "command-arguments-helper": "^0.1.1",
    "tslib": "^2.3.1"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
